<div style="height: 100vh; width: 100vw; display: flex; align-items: center; justify-content: center;">
<div class="jumbotron">
  <h1 class="display-4"><%= @book.title %></h1>
  <p class="lead"><%= @book.author %></p>
  <p class="lead"><%= @book.publisher %></p>
  <p class="lead"><%= @book.genre %></p>
  <hr class="my-4">
  <p><%= @book.description %></p>
        <%= link_to ('<i class="fas fa-arrow-alt-circle-left"></i>').html_safe, :back %>
        <%= link_to ('<i class="far fa-edit"></i>').html_safe, edit_book_path %>
        <%= link_to ('<i class="far fa-trash-alt"></i>').html_safe, book_path(@book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
</div>
</div>

